<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ParentProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParentProfilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivParentProfilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvParentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ibEditParentName"
        app:layout_constraintStart_toEndOf="@+id/cvParentProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibEditParentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvParentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvParentName"
        app:srcCompat="@drawable/icon_edit" />

    <TextView
        android:id="@+id/tvParentUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/username"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibEditParentUsername"
        app:layout_constraintStart_toStartOf="@+id/tvParentName"
        app:layout_constraintTop_toBottomOf="@+id/tvParentName" />

    <ImageButton
        android:id="@+id/ibEditParentUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvParentUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvParentUsername"
        app:srcCompat="@drawable/icon_edit" />

    <TextView
        android:id="@+id/tvParentEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/email"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibEditParentEmail"
        app:layout_constraintStart_toStartOf="@+id/tvParentName"
        app:layout_constraintTop_toBottomOf="@+id/tvParentUsername" />

    <ImageButton
        android:id="@+id/ibEditParentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvParentEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvParentEmail"
        app:srcCompat="@drawable/icon_edit" />

    <TextView
        android:id="@+id/tvParentPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/hidden_password"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibEditParentPassword"
        app:layout_constraintStart_toStartOf="@+id/tvParentName"
        app:layout_constraintTop_toBottomOf="@+id/tvParentEmail" />

    <ImageButton
        android:id="@+id/ibEditParentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvParentPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvParentPassword"
        app:srcCompat="@drawable/icon_edit" />

    <TextView
        android:id="@+id/tvParentAccountCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/account_code"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvParentName"
        app:layout_constraintTop_toBottomOf="@id/tvParentPassword"/>

    <TextView
        android:id="@+id/tvParentAccountCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hidden_password"
        android:textColor="@color/coin_blue"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvParentAccountCodeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvParentPassword" />

    <Button
        android:id="@+id/bParentLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/coin_blue"
        android:text="@string/log_out"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/tvParentAccountCode"
        app:layout_constraintEnd_toEndOf="@+id/cvParentProfilePic"
        app:layout_constraintStart_toStartOf="@+id/cvParentProfilePic" />

    <TextView
        android:id="@+id/tvParentProfileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/edit"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/cvParentProfilePic"
        app:layout_constraintStart_toStartOf="@+id/cvParentProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/cvParentProfilePic" />

</androidx.constraintlayout.widget.ConstraintLayout>
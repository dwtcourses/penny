<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/comp_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Cancel Goal and Send Money to Bank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/transfer_opt_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tranfer to Another Goal"
        app:layout_constraintEnd_toEndOf="@+id/comp_cancel_btn"
        app:layout_constraintStart_toStartOf="@+id/comp_cancel_btn"
        app:layout_constraintTop_toBottomOf="@+id/comp_cancel_btn" />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/transfer_opt_btn"
        app:layout_constraintStart_toStartOf="@+id/transfer_opt_btn"
        app:layout_constraintTop_toBottomOf="@+id/transfer_opt_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>
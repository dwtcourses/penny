<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivGoalDetailsImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_target" />

            <TextView
                android:id="@+id/tvGoalDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Goal Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/ivGoalDetailsImage"
                app:layout_constraintStart_toEndOf="@+id/ivGoalDetailsImage"
                app:layout_constraintTop_toTopOf="@+id/ivGoalDetailsImage"
                app:layout_constraintVertical_bias="0.0" />

             <ProgressBar
                 android:id="@+id/pbDetailsPercentDone"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginEnd="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/ivGoalDetailsImage"
                 app:layout_constraintEnd_toStartOf="@+id/tvDetailsPercentDone"
                 app:layout_constraintStart_toStartOf="@+id/tvGoalDetailsName"
                 app:layout_constraintTop_toBottomOf="@+id/tvGoalDetailsName" />

             <TextView
                 android:id="@+id/tvDetailsPercentDone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="8dp"
                 app:layout_constraintBottom_toBottomOf="@+id/pbDetailsPercentDone"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintTop_toTopOf="@+id/pbDetailsPercentDone" />

             <Button
                 android:id="@+id/deposit_btn"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="8dp"
                 android:text="Make a Deposit"
                 app:layout_constraintBottom_toTopOf="@+id/cancel_goal_btn"
                 app:layout_constraintEnd_toEndOf="@+id/cancel_goal_btn"
                 app:layout_constraintStart_toStartOf="@+id/cancel_goal_btn" />

             <Button
                 android:id="@+id/cancel_goal_btn"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:layout_marginEnd="8dp"
                 android:layout_marginBottom="8dp"
                 android:text="Cancel Goal"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent" />

            <TextView
             android:id="@+id/tvCompletionDateTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:text="Completion Date:"
             android:textAppearance="@style/TextAppearance.AppCompat.Body2"
             app:layout_constraintStart_toStartOf="@+id/ivGoalDetailsImage"
             app:layout_constraintTop_toBottomOf="@+id/tvTotalCostTitle" />

             <TextView
            android:id="@+id/tvCompletionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/tvCompletionDateTitle"
            app:layout_constraintTop_toTopOf="@+id/tvCompletionDateTitle" />

            <TextView
            android:id="@+id/tvTotalCostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Cost:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="@+id/ivGoalDetailsImage"
            app:layout_constraintTop_toBottomOf="@+id/tvAmountTitle" />

            <TextView
            android:id="@+id/tvTotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/tvTotalCostTitle"
            app:layout_constraintTop_toTopOf="@+id/tvTotalCostTitle" />

            <TextView
                android:id="@+id/tvTranscationHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Transaction History"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCompletionDateTitle" />

            <Button
                android:id="@+id/auto_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Set up automatic payment"
                app:layout_constraintBottom_toTopOf="@+id/deposit_btn"
                app:layout_constraintEnd_toEndOf="@+id/deposit_btn"
                app:layout_constraintStart_toStartOf="@+id/deposit_btn"
                app:layout_constraintTop_toBottomOf="@+id/rvGoalTransactionHistory" />

            <TextView
            android:id="@+id/tvAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Amount Saved:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="@+id/ivGoalDetailsImage"
            app:layout_constraintTop_toBottomOf="@+id/ivGoalDetailsImage" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/tvAmountTitle"
                app:layout_constraintTop_toTopOf="@+id/tvAmountTitle" />


            <ImageButton
                android:id="@+id/ivEditGoalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/tvGoalDetailsName"
                app:layout_constraintStart_toEndOf="@+id/tvGoalDetailsName"
                app:layout_constraintTop_toTopOf="@+id/tvGoalDetailsName"
                app:srcCompat="@drawable/icon_edit" />

            <ImageButton
                android:id="@+id/ivEditGoalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/tvCompletionDate"
                app:layout_constraintStart_toEndOf="@+id/tvCompletionDate"
                app:layout_constraintTop_toTopOf="@+id/tvCompletionDate"
                app:srcCompat="@drawable/icon_edit" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGoalTransactionHistory"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTranscationHistory" />

            <View
                android:id="@+id/borderTop"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#CCCCCCCC"
                app:layout_constraintBottom_toTopOf="@+id/rvGoalTransactionHistory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/rvGoalTransactionHistory" />

            <View
                android:id="@+id/borderBot"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#CCCCCCCC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvGoalTransactionHistory" />

            <View
                android:id="@+id/verticalborderLeft"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#CCCCCCCC"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/rvGoalTransactionHistory"
                app:layout_constraintStart_toStartOf="@+id/rvGoalTransactionHistory"
                app:layout_constraintTop_toTopOf="@+id/rvGoalTransactionHistory" />

            <View
                android:id="@+id/verticalborderRight"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#CCCCCCCC"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/rvGoalTransactionHistory"
                app:layout_constraintStart_toEndOf="@+id/rvGoalTransactionHistory"
                app:layout_constraintTop_toTopOf="@+id/rvGoalTransactionHistory" />

            <TextView
                android:id="@+id/noTransactionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="No transactions available"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/rvGoalTransactionHistory"
                app:layout_constraintEnd_toStartOf="@+id/verticalborderRight"
                app:layout_constraintStart_toEndOf="@+id/verticalborderLeft"
                app:layout_constraintTop_toBottomOf="@+id/borderTop" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <Button
        android:id="@+id/bChildLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_pig_pink"
        android:text="@string/log_out"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/tvChildAccountCode"
        app:layout_constraintEnd_toEndOf="@id/cvChildProfilePic"
        app:layout_constraintStart_toStartOf="@id/cvChildProfilePic" />

    <ImageButton
        android:id="@+id/ibEditChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvChildName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvChildName"
        app:srcCompat="@drawable/icon_edit" />

    <ImageButton
        android:id="@+id/ibEditChildUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvChildUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvChildUsername"
        app:srcCompat="@drawable/icon_edit" />

    <ImageButton
        android:id="@+id/ibEditChildEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvChildEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvChildEmail"
        app:srcCompat="@drawable/icon_edit" />

    <ImageButton
        android:id="@+id/ibEditChildPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvChildPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvChildPassword"
        app:srcCompat="@drawable/icon_edit" />

    <TextView
        android:id="@+id/tvChildName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ibEditChildName"
        app:layout_constraintStart_toEndOf="@+id/cvChildProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChildUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/username"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibEditChildUsername"
        app:layout_constraintStart_toStartOf="@+id/tvChildName"
        app:layout_constraintTop_toBottomOf="@+id/tvChildName" />

    <TextView
        android:id="@+id/tvChildEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/email"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibEditChildEmail"
        app:layout_constraintStart_toStartOf="@+id/tvChildName"
        app:layout_constraintTop_toBottomOf="@+id/tvChildUsername" />

    <TextView
        android:id="@+id/tvChildPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/hidden_password"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibEditChildPassword"
        app:layout_constraintStart_toStartOf="@+id/tvChildName"
        app:layout_constraintTop_toBottomOf="@+id/tvChildEmail" />

    <TextView
        android:id="@+id/tvChildAccountCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/account_code"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tvChildName"
        app:layout_constraintTop_toBottomOf="@id/tvChildPassword" />

    <TextView
        android:id="@+id/tvChildAccountCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hidden_password"
        android:textColor="@color/pig_pink"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvChildAccountCodeTitle"
        app:layout_constraintTop_toBottomOf="@id/tvChildPassword" />

    <TextView
        android:id="@+id/tvParentName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvParentProfilePic1"
        app:layout_constraintStart_toStartOf="@id/cvParentProfilePic1"
        app:layout_constraintTop_toBottomOf="@id/cvParentProfilePic1" />

    <TextView
        android:id="@+id/tvParentName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvParentProfilePic2"
        app:layout_constraintStart_toStartOf="@id/cvParentProfilePic2"
        app:layout_constraintTop_toBottomOf="@id/cvParentProfilePic2" />

    <TextView
        android:id="@+id/tvParentName3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvParentProfilePic3"
        app:layout_constraintStart_toStartOf="@id/cvParentProfilePic3"
        app:layout_constraintTop_toBottomOf="@id/cvParentProfilePic3" />

    <TextView
        android:id="@+id/tvParentName4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvParentProfilePic4"
        app:layout_constraintStart_toStartOf="@id/cvParentProfilePic4"
        app:layout_constraintTop_toBottomOf="@id/cvParentProfilePic4" />

    <TextView
        android:id="@+id/tvChildProfileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/edit"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/cvChildProfilePic"
        app:layout_constraintStart_toStartOf="@id/cvChildProfilePic"
        app:layout_constraintTop_toBottomOf="@id/cvChildProfilePic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvChildProfilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivChildProfilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParentProfilePic1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@id/cvParentProfilePic2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvParentsTitle">

        <ImageView
            android:id="@+id/ivParentProfilePic1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParentProfilePic2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@id/cvParentProfilePic3"
        app:layout_constraintStart_toEndOf="@id/cvParentProfilePic1"
        app:layout_constraintTop_toBottomOf="@id/tvParentsTitle">

        <ImageView
            android:id="@+id/ivParentProfilePic2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParentProfilePic3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@id/cvParentProfilePic4"
        app:layout_constraintStart_toEndOf="@id/cvParentProfilePic2"
        app:layout_constraintTop_toBottomOf="@id/tvParentsTitle">

        <ImageView
            android:id="@+id/ivParentProfilePic3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParentProfilePic4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvParentProfilePic3"
        app:layout_constraintTop_toBottomOf="@id/tvParentsTitle">

        <ImageView
            android:id="@+id/ivParentProfilePic4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bChildBankInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button_coin_blue"
        android:drawableTop="@drawable/icon_bank_outline"
        android:drawablePadding="4dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/bank_info"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        app:layout_constraintEnd_toStartOf="@+id/bReferFriend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bChildLogout" />

    <Button
        android:id="@+id/bReferFriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_button_coin_blue"
        android:drawableTop="@drawable/icon_refer_friend"
        android:drawablePadding="4dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/refer_friend"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bChildBankInfo"
        app:layout_constraintTop_toBottomOf="@id/bChildLogout" />

    <TextView
        android:id="@+id/tvParentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/parents"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bChildBankInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>
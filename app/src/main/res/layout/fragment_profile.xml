<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <Button
        android:id="@+id/bProfileLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_pig_pink"
        android:text="@string/log_out"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/tvProfileAccountCode"
        app:layout_constraintEnd_toEndOf="@id/cvProfileChildProfilePic"
        app:layout_constraintStart_toStartOf="@id/cvProfileChildProfilePic" />

    <ImageButton
        android:id="@+id/ibProfileEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProfileName"
        app:srcCompat="@drawable/icon_edit" />

    <ImageButton
        android:id="@+id/ibProfileEditUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfileUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProfileUsername"
        app:srcCompat="@drawable/icon_edit" />

    <ImageButton
        android:id="@+id/ibProfileEditEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfileEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProfileEmail"
        app:srcCompat="@drawable/icon_edit" />

    <ImageButton
        android:id="@+id/ibProfileEditPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfilePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvProfilePassword"
        app:srcCompat="@drawable/icon_edit" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ibProfileEditName"
        app:layout_constraintStart_toEndOf="@+id/cvProfileChildProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/username"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibProfileEditUsername"
        app:layout_constraintStart_toStartOf="@+id/tvProfileName"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileName" />

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/email"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibProfileEditEmail"
        app:layout_constraintStart_toStartOf="@+id/tvProfileName"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileUsername" />

    <TextView
        android:id="@+id/tvProfilePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/hidden_password"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/ibProfileEditPassword"
        app:layout_constraintStart_toStartOf="@+id/tvProfileName"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileEmail" />

    <TextView
        android:id="@+id/tvProfileAccountCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/account_code"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tvProfileName"
        app:layout_constraintTop_toBottomOf="@id/tvProfilePassword" />

    <TextView
        android:id="@+id/tvProfileAccountCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/hidden_password"
        android:textColor="@color/pig_pink"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvProfileAccountCodeTitle"
        app:layout_constraintTop_toBottomOf="@id/tvProfilePassword" />

    <TextView
        android:id="@+id/tvProfileParentName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvProfileParentProfilePic1"
        app:layout_constraintStart_toStartOf="@id/cvProfileParentProfilePic1"
        app:layout_constraintTop_toBottomOf="@id/cvProfileParentProfilePic1" />

    <TextView
        android:id="@+id/tvProfileParentName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvProfileParentProfilePic2"
        app:layout_constraintStart_toStartOf="@id/cvProfileParentProfilePic2"
        app:layout_constraintTop_toBottomOf="@id/cvProfileParentProfilePic2" />

    <TextView
        android:id="@+id/tvProfileParentName3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvProfileParentProfilePic3"
        app:layout_constraintStart_toStartOf="@id/cvProfileParentProfilePic3"
        app:layout_constraintTop_toBottomOf="@id/cvProfileParentProfilePic3" />

    <TextView
        android:id="@+id/tvProfileParentName4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/cvProfileParentProfilePic4"
        app:layout_constraintStart_toStartOf="@id/cvProfileParentProfilePic4"
        app:layout_constraintTop_toBottomOf="@id/cvProfileParentProfilePic4" />

    <TextView
        android:id="@+id/tvProfileEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/edit"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/cvProfileChildProfilePic"
        app:layout_constraintStart_toStartOf="@id/cvProfileChildProfilePic"
        app:layout_constraintTop_toBottomOf="@id/cvProfileChildProfilePic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileChildProfilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProfileChildProfilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileParentProfilePic1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@id/cvProfileParentProfilePic2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProfileParentsTitle">

        <ImageView
            android:id="@+id/ivProfileParentProfilePic1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileParentProfilePic2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@id/cvProfileParentProfilePic3"
        app:layout_constraintStart_toEndOf="@id/cvProfileParentProfilePic1"
        app:layout_constraintTop_toBottomOf="@id/tvProfileParentsTitle">

        <ImageView
            android:id="@+id/ivProfileParentProfilePic2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileParentProfilePic3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@id/cvProfileParentProfilePic4"
        app:layout_constraintStart_toEndOf="@id/cvProfileParentProfilePic2"
        app:layout_constraintTop_toBottomOf="@id/tvProfileParentsTitle">

        <ImageView
            android:id="@+id/ivProfileParentProfilePic3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileParentProfilePic4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"
        android:visibility="invisible"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvProfileParentProfilePic3"
        app:layout_constraintTop_toBottomOf="@id/tvProfileParentsTitle">

        <ImageView
            android:id="@+id/ivProfileParentProfilePic4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_user" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bProfileBankInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button_coin_blue"
        android:drawableTop="@drawable/icon_bank_outline"
        android:drawablePadding="4dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/bank_info"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/bProfileViewAllowance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bProfileLogout" />

    <Button
        android:id="@+id/bProfileReferFriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button_pig_pink"
        android:drawableTop="@drawable/icon_refer_friend"
        android:drawablePadding="4dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/refer_friend"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/bProfileViewAllowance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bProfileBankInfo"
        app:layout_constraintTop_toBottomOf="@+id/bProfileBankInfo" />

    <Button
        android:id="@+id/bProfileViewAllowance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_button_coin_blue"
        android:drawableTop="@drawable/ic_iconfinder_finance_money_dollar_28_4057991"
        android:drawablePadding="4dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/allowance_info"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bProfileBankInfo"
        app:layout_constraintTop_toBottomOf="@id/bProfileLogout" />

    <TextView
        android:id="@+id/tvProfileParentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/parents"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bProfileReferFriend" />

    <ImageButton
        android:id="@+id/ibProfileParentSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_gear"
        app:layout_constraintBottom_toBottomOf="@+id/tvProfileParentsTitle"
        app:layout_constraintStart_toEndOf="@id/tvProfileParentsTitle"
        app:layout_constraintTop_toTopOf="@+id/tvProfileParentsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>